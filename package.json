{
  "name": "redux-repository",
  "version": "0.6.1",
  "description": "Redux Repository",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean:build && npm run build:sources && npm run build:types && npm run clean:tests",
    "build:sources": "babel src -d lib --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly",
    "check": "npm run lint && npm run typecheck && npm test",
    "clean:build": "rimraf lib",
    "clean:coverage": "rimraf coverage",
    "clean:tests": "rimraf \"lib/**/*.test.js\"",
    "coverage": "npm run clean:coverage && npm run test:coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --ext ts src",
    "prepublishOnly": "npm run check && npm run build",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot",
    "test:watch": "npm test -- --watch",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loginov-rocks/redux-repository.git"
  },
  "keywords": [
    "redux",
    "repository"
  ],
  "author": "Danila Loginov <danila@loginov.rocks> (https://loginov.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loginov-rocks/redux-repository/issues"
  },
  "homepage": "https://github.com/loginov-rocks/redux-repository",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/jest": "^25.1.2",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-jest": "^25.1.0",
    "coveralls": "^3.0.9",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsdoc": "^23.0.0",
    "jest": "^25.1.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "redux": ">=4.0.0",
    "redux-thunk": ">=2.0.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/src/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "verbose": true
  }
}

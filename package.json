{
  "name": "redux-repository",
  "version": "0.5.1",
  "description": "Redux Repository",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean:build && npm run build:sources && npm run build:types && npm run clean:tests",
    "build:sources": "babel src -d lib --extensions \".ts\"",
    "build:types": "tsc --emitDeclarationOnly",
    "ci": "npm run lint && npm run typecheck && npm test && npm run build",
    "clean:build": "rimraf lib",
    "clean:coverage": "rimraf coverage",
    "clean:tests": "rimraf \"lib/**/*.test.js\"",
    "coverage": "npm run clean:coverage && npm run test:coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "eslint --ext ts src",
    "prepublishOnly": "npm run ci",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:update": "npm test -- --updateSnapshot",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loginov-rocks/redux-repository.git"
  },
  "keywords": [
    "redux",
    "repository"
  ],
  "author": "Danila Loginov <danila@loginov.rocks> (https://loginov.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loginov-rocks/redux-repository/issues"
  },
  "homepage": "https://github.com/loginov-rocks/redux-repository",
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/preset-env": "^7.5.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.0.4",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-typescript": "^4.0.0",
    "eslint-plugin-flowtype": "^3.12.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsdoc": "^15.0.0",
    "jest": "^24.8.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.2"
  },
  "peerDependencies": {
    "redux": ">= 4.0.0",
    "redux-thunk": ">= 2.0.0"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.[jt]s?(x)",
      "<rootDir>/src/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "verbose": true
  }
}

{
  "name": "redux-repository",
  "version": "0.4.9",
  "description": "Redux Repository",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "babel src -d lib",
    "clean": "rimraf lib",
    "coveralls": "npm run test:coverage && cat ./coverage/lcov.info | coveralls",
    "flow": "flow",
    "lint": "eslint src",
    "prepublishOnly": "npm run lint && npm run flow && npm run test:coverage && npm run clean && npm run build && flow-copy-source src lib",
    "test": "jest",
    "test:coverage": "npm test -- --coverage",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/loginov-rocks/redux-repository.git"
  },
  "keywords": [
    "redux",
    "repository"
  ],
  "author": "Danila Loginov <danila@loginov.rocks> (https://loginov.rocks)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loginov-rocks/redux-repository/issues"
  },
  "homepage": "https://github.com/loginov-rocks/redux-repository",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-flow": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-flowtype": "^3.10.3",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-jsdoc": "^8.1.0",
    "flow-bin": "^0.101.0",
    "flow-copy-source": "^2.0.6",
    "jest": "^24.8.0",
    "rimraf": "^2.6.3"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)+(spec|test).js?(x)"
    ],
    "verbose": true
  }
}
